{
    "train_batch_size": 16,
    "gradient_accumulation_steps": 8,
    "zero_allow_untested_optimizer": true,
    "optimizer": {
        "type": "AdamW",
        "params": {
            "lr": 0,
            "betas": [
                0.8,
                0.999
            ],
            "eps": 1e-8,
            "weight_decay": 3e-7
        }
    },
    "fp16": {
        "enabled": true,
        "loss_scale": 0,
        "loss_scale_window": 1000,
        "hysteresis": 2,
        "min_loss_scale": 1
    },
    "zero_optimization": {
        "stage": 2,
        "cpu_offload": false,
        "contiguous_gradients": false,
        "overlap_comm": true,
        "reduce_bucket_size": 1.3e9,
        "allgather_bucket_size": 1.3e9
    },
    "scheduler": {
        "type": "WarmupLR",
        "params": {
            "warmup_min_lr": 0,
            "warmup_max_lr": 1,
            "warmup_num_steps": 500
        }
    },
    "wall_clock_breakdown": false
}